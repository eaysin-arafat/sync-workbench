{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "lib": ["dom", "es2015", "es2017"],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
